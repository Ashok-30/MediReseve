<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
 >
    <include
        layout="@menu/header"
        android:id="@+id/patientHeader"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />



    <TextView
        android:id="@+id/doctorAvailability"
        android:layout_width="398dp"
        android:layout_height="70dp"
        android:layout_below="@id/patientHeader"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="6dp"
        android:padding="5dp"
        android:text="Select Availability"
        android:textColor="@color/button"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctorAvailability"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="51dp"
        android:padding="5dp"
        android:text="Between 9AM-5PM"
        android:textColor="@color/button"
        android:textSize="25sp" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_below="@id/time"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <!-- Start Date -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutStartDate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:focusable="false"
                    android:hint="Start Date"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- End Date -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutEndDate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:focusable="false"
                    android:hint="End Date"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </RelativeLayout>


    <CheckBox
        android:id="@+id/doctorMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="105dp"
        android:layout_marginEnd="257dp"
        android:padding="5dp"

        android:text="Monday"
        android:textColor="@color/text"
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/doctorTue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctorMon"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="251dp"
        android:padding="5dp"
        android:text="Tuesday"

        android:textColor="@color/text"
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/doctorWed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctorTue"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="207dp"
        android:padding="5dp"
        android:text="Wednesday"

        android:textColor="@color/text"
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/doctorThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctorWed"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="238dp"
        android:padding="5dp"
        android:text="Thursday"

        android:textColor="@color/text"
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/doctorFri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctorThu"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="282dp"
        android:padding="5dp"
        android:text="Friday"

        android:textColor="@color/text"
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/doctorSat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctorFri"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="246dp"
        android:padding="5dp"
        android:text="Saturday"

        android:textColor="@color/text"
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/doctorSun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctorSat"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="265dp"
        android:padding="5dp"
        android:text="Sunday"

        android:textColor="@color/text"
        android:textSize="30sp" />

    <Button
        android:id="@+id/daySubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="21dp"
        android:backgroundTint="@color/button"
        android:text="Done" />


</RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:itemTextColor="@color/button"
        android:fitsSystemWindows="true"
        app:itemIconTint="@color/button"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/doctor_drawer" />


</androidx.drawerlayout.widget.DrawerLayout>