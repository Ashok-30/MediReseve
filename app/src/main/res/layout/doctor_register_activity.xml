<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>


    <RelativeLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:alpha="0.7"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="28dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:layout_gravity="center"
                    android:textColor="@color/button"
                    android:textSize="32sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>


                <EditText
                    android:id="@+id/txtDoctorFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:background="@drawable/border_background"
                    android:textColor="@color/text"
                    android:hint="First Name"
                    android:textColorHint="@color/text"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>


                <EditText
                    android:id="@+id/txtDoctorSurname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/text"
                    android:hint="Sur Name"
                    android:textColorHint="@color/text"
                    android:background="@drawable/border_background"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>


                <EditText
                    android:id="@+id/txtspecialization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_background"
                    android:inputType="text"
                    android:textColor="@color/text"
                    android:hint="Specialization"
                    android:textColorHint="@color/text"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>


                <EditText
                    android:id="@+id/txtDoctorPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/text"
                    android:hint="Phone"
                    android:maxLength="10"
                    android:background="@drawable/border_background"
                    android:textColorHint="@color/text"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>


                <EditText
                    android:id="@+id/txtDoctorId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Doctor ID"

                    android:maxLength="6"
                    android:textColorHint="@color/text"
                    android:paddingTop="16dp"
                    android:background="@drawable/border_background"
                    android:textColor="@color/text"
                    android:paddingBottom="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>


                <EditText
                    android:id="@+id/txtDoctorEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:textColorHint="@color/text"
                    android:textColor="@color/text"
                    android:paddingTop="16dp"
                    android:background="@drawable/border_background"
                    android:paddingBottom="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>


                <EditText
                    android:id="@+id/txtDoctorPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:background="@drawable/border_background"
                    android:textColorHint="@color/text"
                    android:textColor="@color/text"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    />




                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>

                <Button
                    android:id="@+id/btnDocConfirm"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/button"
                    android:layout_gravity="center"
                    android:text="@string/register" />

            </LinearLayout>

</RelativeLayout>
</ScrollView>